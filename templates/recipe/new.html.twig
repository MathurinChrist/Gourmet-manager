        document.getElementById('add-ingredient').addEventListener('click', function() {
            // Cette partie sera améliorée avec JavaScript pour ajouter dynamiquement des ingrédients
            alert('Fonctionnalité à implémenter');
        });
    </script>
{% endblock %}